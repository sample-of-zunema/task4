<div class="container">
  <div class="row">
    <p></p>
    <h3>Follower Users</h3>
    <table class="table">
      <tbody>
        <tr>
          <td>image</td>
          <td>name</td>
        </tr>
        <% @user.follower_user.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= "フォロー数: #{user.follower.count}" %></td>
            <td><%= "フォロワー数: #{user.followed.count}" %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>