<div class="container">
  <div class="row">
    <p></p>
    <h3>Follow Users</h3>
    <table class="table">
      <tbody>
        <tr>
          <td>image</td>
          <td>name</td>
        </tr>
        <% @user.following_user.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= "フォロー数: #{user.follower.count}" %></td>
            <td><%= "フォロワー数: #{user.followed.count}" %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
            <td>
              <% if @user.id == current_user.id %>
                <% if current_user.following?(user) %>
                    <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST, class: 'btn btn-info' %>
                <% else %>
                    <%= link_to 'フォローする', follow_path(user.id), method: :POST, class: 'btn btn-info' %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>